<script type="text/javascript">

      $('.ui.dropdown').dropdown();

      $("#Update").click(function(){
        $(".EditModal").modal('show');
      });
  
      $(".InsertModal").modal({
        closable: true
      });

      $("#Insert").click(function(){
        $(".InsertModal").modal('show');
      });
  
      $(".InsertModal").modal({
        closable: true
      });
      
      $("#Delete").click(function(){
        $(".DeleteModal").modal('show');
      });

